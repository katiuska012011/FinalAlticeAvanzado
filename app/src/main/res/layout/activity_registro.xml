<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro"
    android:background="@drawable/violencia">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="monospace"
            android:textSize="30dp"
            android:text="Registrarte!"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:orientation="vertical">



        <EditText
            android:id="@+id/editnombreReg"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="@android:color/transparent"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:gravity="center"
            android:padding="8dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="110dp"
            android:hint="Nombre Completo"
            android:maxLines="1"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#fff"/>


        <EditText
            android:id="@+id/editemailReg"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="@android:color/transparent"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:gravity="center"
            android:padding="8dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:hint="Email"
            android:maxLines="1"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#fff"/>

        <EditText
            android:id="@+id/editpassReg"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="@android:color/transparent"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:gravity="center"
            android:padding="8dp"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:hint="ContraseÃ±a"
            android:maxLines="1"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#fff"/>




        <Button
            android:id="@+id/btnAcess"
            android:textColor="#fff"
            android:background="@drawable/buttonstylenormal"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="250dp"
            android:text="Aceder"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/regresar"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="fill"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:background="@drawable/espalda"/>






    </LinearLayout>










</android.support.constraint.ConstraintLayout>